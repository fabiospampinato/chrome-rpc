  "scripts": {
    "clean": "tsex clean",
    "compile": "tsex compile",
    "compile:watch": "tsex compile --watch",
    "prepublishOnly": "tsex prepare"
  },
  "keywords": [
    "chrome",
    "extension",
    "rpc",
    "simple"
  ],
  "devDependencies": {
    "@types/chrome": "^0.0.328",
    "tsex": "^4.0.2",
    "typescript": "^5.8.3"
  }
