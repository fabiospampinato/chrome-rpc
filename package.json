{
  "name": "chrome-rpc",
  "repository": "github:fabiospampinato/chrome-rpc",
  "description": "A simple RPC mechanism for Chrome extensions.",
  "license": "MIT",
  "version": "1.0.1",
  "type": "module",
  "main": "dist/backend.js",
  "types": "./dist/backend.d.ts",
  "exports": {
    "backend": "./dist/backend.js",
    "frontend": "./dist/frontend.js"
  },
  "typesVersions": {
    "*": {
      "backend": [
        "./dist/backend.d.ts"
      ],
      "frontend": [
        "./dist/frontend.d.ts"
